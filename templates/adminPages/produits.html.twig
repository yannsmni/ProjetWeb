{% extends 'admin.html.twig' %}

{% block title %}Administration des produits{% endblock %}

{% block body %}

<h1 class="mt-4">Gestion des produits</h1>

<a href="{{ path('adminProductsAdd')}}" class="btn btn-success">Ajouter un produit</a>

<div class="container">
    <div class="search_type my-4" style="margin-bottom: 32px">
        <h5>Personnaliser la recherche</h5>
        {{ form_start(form) }}
        <div class="search_bar">
            {{ form_rest(form) }}
        </div>
        {{ form_end(form) }}
    </div>
</div>
                     
<div class="container-fluid mt-4">
    <table class="table table-striped text-center">
        <thead class="thead-dark">
            <tr>
                <th>Produit</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Quantité vendue</th>
                <th>Administration</th>
            </tr>
        </thead>

        <tbody class="tbody_produits">
        {% for produit in allProducts %}
            <tr class="admin_product">
                <td class="font-weight-bold">{{ produit.nom }}</td>
                <td>{{ produit.description }}</td>
                <td class="font-weight-bold">{{ produit.prix }} €</td>
                <td>{{ produit.getQuantiteVendu() }}</td>
                <td>
                    <a href="{{ path('adminProductsEdit', {id: produit.id}) }}" class="btn btn-primary">Modifier</a>
                    <a href="{{ path('adminProductsDelete', {id: produit.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
    
{% endblock %}

{% block javascripts %}
<script src="/assets/js/ajaxProducts.js"></script>
{% endblock %}
