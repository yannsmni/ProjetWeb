{% extends 'events.html.twig' %}

{% block title %}Evénements{% endblock %}

{% block body %}

<div class="jumbotron">
    <h1 class="display-4">{{ evenement.nom }} - {{ evenement.id }}</h1>
    <hr class="my-4">
    <div>
        <h1>Description de l'événement</h1>
        <p>{{ evenement.description }}</p>
    </div>
    <hr class="my-4">
    <div>
        <h1>Informations</h1>
        <p><span class="font-weight-bold">Prix de l'événement :</span> {{ evenement.prix }} €</p>
        <p><span class="font-weight-bold">Date de l'événement :</span> Le {{ evenement.date|date("d M Y")}} à {{ evenement.date|date("G")}}h{{ evenement.date|date("i")}}</p>
        <p><span class="font-weight-bold">Type d'événement :</span> {{ evenement.statut }}</p>
        <p><span class="font-weight-bold">Nombre de participants :</span> {{ evenement.participants | length }}</p>
    </div>
        <hr class="my-4">
        <div>
            <a href="{{ path('evenementsRegisterId', {id: evenement.id}) }}" class="btn btn-success">M'inscrire</a>
            <button class="btn btn-primary" type="submit">Ajouter une photo</button>
            <button class="btn btn-primary" type="submit">Commenter</button>
            <button class="btn btn-danger" type="submit">Signaler</button>
        </div>
    <hr class="my-4">
    <div>
        <h1>Participants ({{ evenement.participants | length }})</h1>
        <div class="col">
            {% for participant in evenement.participants %}
                <div class="card">
                    <div class="card-body">
                        <p>{{ participant.nom }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <hr class="my-4">
    <div>
        <h1>Photos de l'événement ({{ evenement.images | length }})</h1>
        {% for images in evenement.images %}
        <div class="card" style="width: 18rem;">
            <img src="{{ images.chemin }}" class="card-img-top" alt="{{ images.description }}">
            <div class="card-body">
                <p>OUI OUI OUI OUI</p>
            </div>
        </div>
        {% endfor %}
    </div>
    <hr class="my-4">
    <div>
        <h1>Commentaires ({{ evenement.commentaire | length }})</h1>
    </div>
    <div class="container my-4">
        {% for commentaire in evenement.commentaire %}
        <div class="mt-3">
            <div class="row">
                <div class="col-3">
                     (<small>Le {{ commentaire.date|date("d M Y")}} à {{ commentaire.date|date("G")}}h{{ commentaire.date|date("i")}}</small>)
                </div>
                <div class="col">
                    {{ commentaire.contenu | raw }}
                </div>
            </div>
        </div>
        {% endfor %}
        <div class="my-4">
            {{ form_start(form) }}
                {{ form_rest(form) }}
                <button type="submit" class="btn btn-primary">Poster</button>
            {{ form_end(form) }}
            <p class="mt-4 font-weight-bold">Connectez vous pour pouvoir poster un commentaire</p>
        </div>
    </div>
</div>

{% endblock %}