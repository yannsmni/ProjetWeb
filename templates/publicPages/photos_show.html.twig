{% extends 'base.html.twig' %}

{% block title %}Image {{ image.id }}{% endblock %}

{% block body %}

<div class="container-fluid my-4">
            <div class="card m-4">
                <div class="row">
                    <div class="col-6">
                        <div class="container my-3">
                            <img src="/assets/image/photos/{{image.filename}}" alt="{{ image.description }}" style="width: 100%; height: auto;">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="card-body">
                            <p class="card-text">Le {{ image.getDateEdit()|date("d M Y")}} à {{ image.getDateEdit()|date("G")}}h{{ image.getDateEdit()|date("i")}}</p>
                        </div>
                        <div class="container">
                            <div class="mb-4">
                                <a href="{{ path('photosReportId', {id: image.id}) }}" class="btn btn-danger ml-4">Signaler</a>
                            </div>
                        </div>
                        <div class="container">
                            <div class="card card-body">
                                <h5>{{ image.commentaire | length }} Commentaires</h5>
                                <div class ="comment">
                                    {% for commentaire in image.commentaire %}
                                    <div class="row my-2">
                                        <div class="col-3">
                                        (<small>{{commentaire.date | date('d/m/Y à H:i')}}</small>)
                                        </div>
                                        <div class="col">
                                        {{commentaire.contenu}}
                                        </div>
                                    </div>
                                    {% endfor %}
                                </div>
                            </div>
                            <div class="m-4">
                                {% if app.user %}
                                {{ form_start(form) }}
                                    {{ form_rest(form) }}
                                <button type="submit" class="btn btn-success">Commenter</button>
                                {{ form_end(form) }}
                                {% else %}
                                <p>Connectez vous pour pouvoir poster un commentaire</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</div>

{% endblock %}