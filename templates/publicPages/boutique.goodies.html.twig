{% extends 'shop.html.twig' %}

{% block title %}Nos goodies{% endblock %}

{% block body %}

    <div class="container-fluid my-4">
        <h1>Nos goodies</h1>
        <div class="row">
            {% for produit in goodies %}
                <div class="card col-xs-12 col-sm-12 col-md-12 col-lg-4 col-xl-2 m-4">
                    <div class="card-body">
                        <br/><img src="{{ produit.getImageChemin() }}" class="card-img-bottom" alt="{{ produit.description }}">
                        <h4 class="card-title">{{ produit.nom }}</h4>
                        <p class="card-text"> {{ produit.description }}</p>
                        <p class="card-text"><small class="text-muted">Prix : {{ produit.prix }}â‚¬</small></p>
                        <div>
                            <a class="btn btn-primary" href="{{ path('boutique/ID', {ID: produit.id}) }}">Plus d'infos</a>
                        </div>
                        <a href="#" class="btn btn-success">
                            Ajouter au panier
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}