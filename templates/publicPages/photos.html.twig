{% extends 'base.html.twig' %}

{% block title %}Photos{% endblock %}

{% block body %}

<div class="container my-4">
    <div class="card-deck">
        {% for image in allImages %}
        <div class="card col-xs-12 col-sm-12 col-md-12 col-lg-4 col-xl-3 m-4">
            <img src="/assets/image/photos/{{ image.filename }}" class="card-img" alt="{{ image.description }}">
            <div class="card-body">
                <p class="card-text">Le {{ image.getDateEdit()|date("d M Y")}} Ã  {{ image.getDateEdit()|date("G")}}h{{ image.getDateEdit()|date("i")}}</p>
            </div>
        </div>
        {% endfor %}
    </div>
</div>

{% endblock %}